<div class="center hero-unit">
<%= form_for(@report) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Create new report..." %>
  </div>
  <%= f.submit "Submit Report", class: "btn btn-large btn-primary" %>
<% end %>
</div>