<% provide(:title, 'Search result') %>
<h1>All users</h1>
<%= form_tag("/search", method: "get") do %>
	<%= label_tag(:q, "Search by name: ")%>
	<%= text_field_tag(:q) %>
	<%= submit_tag("Search") %>
<% end %>
<% if @ret %>
<ul>
   <section>
				<%= link_to(gravatar_for(@ret,50), @ret) %>
				<%= link_to @ret.name, @ret %>
		</section>
</ul>
<% else %>
	<b>No result</b>
<% end %>